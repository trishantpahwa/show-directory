{
  "name": "show-directory",
  "version": "1.0.0",
  "description": "A package to list files and folders in a directory.",
  "main": "dist/index.js",
  "scripts": {
    "mon": "nodemon -w src/index.js --exec \"babel-node --presets es2015,stage-0 src/index.js\"",
    "build": "npm run clean && babel src -s -D -d dist --presets es2015,stage-0 --ignore sample_folder",
    "build:with-tests": "babel src -s -D -d dist --presets es2015,stage-0",
    "start": "node dist",
    "clean": "rimraf dist",
    "pre-test": "babel tests -s -D -d dist --presets es2015,stage-0",
    "test": "npm run pre-test && mocha dist/index.test.js",
    "travis": "npm run clean && npm run build:with-tests && npm test",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trishantpahwa/show-directory.git"
  },
  "author": "Trishant Pahwa <trishantpahwa@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trishantpahwa/show-directory/issues"
  },
  "homepage": "https://github.com/trishantpahwa/show-directory#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^6.6.0",
    "eslint-config-google": "^0.14.0",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "rimraf": "^3.0.0"
  }
}
